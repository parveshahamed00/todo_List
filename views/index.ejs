<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ToDo List</title>
    <link rel="stylesheet" href="css/styles.css" />
    <link rel="shortcut icon" href="image/favicon.jpg" type="image/x-icon">
  </head>
  <body>
   <div class="box" id="heading">
      <em><%= date %> </em>
      <h1><%= listTitle %> <span>list</span></h1>
    </div>
    <div class="box">
      <% todos.forEach((e) => { %>
        <form action="/delete" method="post" >
          <div class="item">
            <input type="checkbox" id="checked" name="checkbox" value="<%= e._id %>" onchange="this.form.submit()"/>
            <p><%= e.name %></p>
          </div>
        </form>
     
      <% }) %>
    </div>

    <form action="/ " method="post" class="form">
      <input type="text" name="todo" placeholder="New ToDo" />
      <button type="submit" name="button" value=<%= listTitle %> >+</button>
    </form>
  </body>
